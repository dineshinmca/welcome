<?php if($crumbs && is_array($crumbs)): ?>
<div id="breadcrumb">
	<div class="container">
		<div class=" breadcrumb">
			<?php $i=1; foreach($crumbs as $_crumbName=>$_crumbInfo):?>
					<?php if($_crumbInfo['link'] && $i!=1): ?>
						<span class="navigation_page"><a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></a></span>
					<?php elseif($_crumbInfo['link'] && $i==1): ?>
						<a title="Return to Home" href="<?php echo $_crumbInfo['link'] ?>" class="home">
							<i class="icon-home"></i> <?php echo $this->escapeHtml($_crumbInfo['label']) ?></a>
					<?php elseif($_crumbInfo['last']): ?>
						<span class="navigation_page"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span>
					<?php else: ?>
						<?php echo $this->escapeHtml($_crumbInfo['label']) ?>
					<?php endif; ?>
					<?php if(!$_crumbInfo['last']): ?>
						<span class="navigation-pipe"></span>
					<?php endif; ?>
					
				<?php $i++; endforeach; ?>
			
		</div>
	</div>
</div>
<?php endif; ?>

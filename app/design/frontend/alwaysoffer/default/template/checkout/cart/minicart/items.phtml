/**
 * Shoping cart sidebar
 *
 * @var Mage_Checkout_Block_Cart_Minicart $this
 */
?>

<?php
$_cartQty = $this->getSummaryCount();
if(empty($_cartQty)) {
    $_cartQty = 0;
}
?>
<div class="cart_block block exclusive" style="display: block;">
	<div class="block_content">
		<!-- block list of products -->
		
			<div id="minicart-error-message" class="minicart-message"></div>
			<div id="minicart-success-message" class="minicart-message"></div>

			<div class="minicart-wrapper">
				<?php $_items = $this->getRecentItems() ?>
				<?php $countItems = count($_items); ?>
				<?php if($countItems): ?>
					<div class="cart_block_list">
						<dl class="products">
							<?php foreach($_items as $_item): ?>
								<?php echo $this->getItemHtml($_item) ?>
							<?php endforeach; ?>
						</dl>
					</div>
					<script type="text/javascript">
						decorateList('cart-sidebar', 'none-recursive');
						$j = jQuery.noConflict();
						$j('document').ready(function() {
							var minicartOptions  = {
								formKey:           "<?php echo $this->getFormKey();?>"
							}
							var Mini = new Minicart(minicartOptions);
							Mini.init();
						});
					</script>

					<div id="minicart-widgets">
						<?php echo $this->getChildHtml('cart_promotion') ?>
					</div>
					<div class="block-content">
						<p class="subtotal">
							<?php if ($this->canApplyMsrp()): ?>
								<span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
							<?php else: ?>
								<span class="label"><?php echo $this->__('Cart Subtotal:') ?></span> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
								<?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
									<br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
								<?php endif; ?>
							<?php endif; ?>
						</p>
					</div>


					<?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
						<div class="minicart-actions">
							<p class="cart-buttons clearfix">
								<a class="btn btn-default pull-right" href="<?php echo $this->getUrl('checkout/cart'); ?>">
								<?php echo $this->__('View Shopping Cart'); ?>
								</a>
							</p>
							<ul class="checkout-types minicart">
								<?php echo $this->getChildHtml('extra_actions') ?>
								<li>
									<p class="cart-buttons clearfix">
										<a title="<?php echo $this->__('Checkout') ?>" class="btn btn-default pull-right" id="button_order_cart" href="<?php echo $this->getCheckoutUrl() ?>">
											<span><?php echo $this->__('Checkout') ?><i class="icon-chevron-right right"></i></span>
										</a>
									</p>
								</li>
							</ul>
						</div>
					<?php endif ?>

				<?php else: ?>
					<p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>

				<?php endif ?>
			</div>
		
	</div>
</div>
	
